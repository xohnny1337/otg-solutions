---
interface Props {
  title?: string;
  description?: string;
  class?: string;
  background?: "white" | "gray";
}

const { 
  title, 
  description, 
  class: className,
  background = "white"
} = Astro.props;

const bgColors = {
  white: "bg-white",
  gray: "bg-gray-50"
};
---

<section class:list={["py-16", bgColors[background], className]}>
  {(title || description) && (
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        {title && (
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            {title}
          </h2>
        )}
        {description && (
          <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
            {description}
          </p>
        )}
      </div>
    </div>
  )}
  <slot />
</section> 