---
import Link from '@/components/Link.astro';
import Container from '@/components/Container.astro';
---

<header class="bg-white/60 backdrop-blur-sm border-b border-gray-200 sticky top-0 z-50">
  <Container>
    <div class="flex justify-between items-center gap-4">
      <!-- Logo -->
      <Link href="/" ariaLabel="Hjem - OTG Solutions" class="text-lg md:text-2xl font-bold shrink-0 text-black"> OTG Solutions </Link>

      <nav class="flex items-center gap-4">
        <Link href="/om-oss" ariaLabel="Lenke til om oss" class="md:text-lg">Om oss</Link>
        <Link href="/kontakt" ariaLabel="Lenke til kontakt oss" class="md:text-lg">Kontakt</Link>
      </nav>
    </div>
  </Container>
</header>
