---
import { Button } from '@/components/ui/button.tsx';
import Link from '@/components/Link.astro';
import Container from '@/components/Container.astro';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="border-b border-border">
    <Container>
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-2xl font-bold text-gray-900 hover:text-gray-700 transition-colors">
              <Link href="/" ariaLabel="Hjem - OTG Solutions" class="no-underline">
                OTG Solutions
              </Link>
            </h1>
          </div>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-center space-x-8">
            <Link
              href="/om-oss"
              ariaLabel="Lenke til om oss"
              class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors duration-200 hover:bg-gray-50 rounded-md"
            >
              Om oss
            </Link>
            <Link href="/kontakt" ariaLabel="Lenke til kontakt oss">
              <Button> Kontakt oss </Button>
            </Link>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden">
          <details class="mobile-menu-details">
            <summary
              class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors duration-200"
              aria-label="Åpne hovedmeny"
            >
              <span class="sr-only">Åpne hovedmeny</span>
              <!-- Menu icon -->
              <svg
                class="h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </summary>

            <!-- Mobile Navigation Menu -->
            <div class="mobile-menu absolute left-0 right-0 bg-white border-t border-gray-200 mt-2">
              <div class="px-2 pt-2 pb-3 space-y-1">
                <Link
                  href="/om-oss"
                  ariaLabel="Lenke til om oss"
                  class="text-gray-700 hover:text-gray-900 hover:bg-gray-50 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
                >
                  Om oss
                </Link>
                <div class="px-3 py-2">
                  <Link href="/kontakt" ariaLabel="Lenke til kontakt oss">
                    <Button> Kontakt oss </Button>
                  </Link>
                </div>
              </div>
            </div>
          </details>
        </div>
      </div>
    </Container>
  </nav>
</header>
