---
import { cn } from '@/lib/utils';

interface Props {
  href: string;
  ariaLabel: string;
  class?: string;
}

const { href, class: className, ariaLabel } = Astro.props;
---

<a href={href} class={cn('transition-colors', 'text-gray-600 hover:text-gray-900 text-sm font-medium', className)} aria-label={ariaLabel}>
  <slot />
</a>
