---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Container from '../components/Container.astro';
import Button from '../components/Button.astro';
import FormInput from '../components/FormInput.astro';
---

<Layout>
  <div class="bg-white">
    <Hero
      title="Kontakt Oss"
      description="Vi er her for å hjelpe deg. Ta kontakt for en uforpliktende samtale."
    />

    <Section>
      <Container>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Contact Form -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <form class="space-y-6">
              <FormInput label="Navn" name="name" required />

              <FormInput label="E-post" name="email" type="email" required />

              <FormInput label="Telefon" name="phone" type="tel" />

              <FormInput label="Bedrift" name="company" />

              <FormInput label="Melding" name="message" type="textarea" required />

              <div>
                <Button type="submit" class="w-full"> Send melding </Button>
              </div>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="bg-gray-50 rounded-lg p-8">
            <div class="space-y-8">
              <div>
                <h3 class="text-lg font-medium text-gray-900">Kontaktinformasjon</h3>
                <dl class="mt-4 space-y-4">
                  <div>
                    <dt class="text-sm font-medium text-gray-500">E-post</dt>
                    <dd class="mt-1 text-sm text-gray-900">kontakt@otgsolutions.no</dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Telefon</dt>
                    <dd class="mt-1 text-sm text-gray-900">+47 XXX XX XXX</dd>
                  </div>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Adresse</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      OTG Solutions AS<br />
                      [Din Adresse]<br />
                      [Postnummer] [By]<br />
                      Norge
                    </dd>
                  </div>
                </dl>
              </div>

              <div>
                <h3 class="text-lg font-medium text-gray-900">Åpningstider</h3>
                <dl class="mt-4 space-y-4">
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Mandag - Fredag</dt>
                    <dd class="mt-1 text-sm text-gray-900">08:00 - 16:00</dd>
                  </div>
                </dl>
              </div>

              <div>
                <h3 class="text-lg font-medium text-gray-900">Følg oss</h3>
                <ul class="mt-4 space-y-4">
                  <li>
                    <a href="#" class="text-blue-600 hover:text-blue-500">LinkedIn</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </Container>
    </Section>
  </div>
</Layout>
